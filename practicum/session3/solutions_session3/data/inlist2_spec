
! inlist_test_rlo



&star_job

      pgstar_flag = .true.

      ! Save a model when the star is finished running
      save_model_when_terminate = .true.
      save_model_filename = 'runaway.mod'

/ ! end of star_job namelist



&controls

      photo_directory = 'photos2'
      log_directory = 'LOGS2'

      profile_interval = 20
      history_interval = 2
      terminal_interval = 2
      write_header_frequency = 10


    ! Stopping criteria
    ! Stop at central helium abundance lower than this
      xa_central_lower_limit_species(1) = 'he4'
      xa_central_lower_limit(1) = 0.01


    ! P H Y S I C A L   P A R A M E T E R S

    ! Z-base is needed to use the type2 opacities
      Zbase = 0.02

    ! Activate semiconvection
      use_ledoux_criterion = .true.
      alpha_semiconvection = 1d0

    ! Convective overshooting (step)
      overshoot_scheme(1) = 'step'
      overshoot_zone_type(1) = 'burn_H'
      overshoot_zone_loc(1) = 'core'
      overshoot_bdy_loc(1) = 'top'
      overshoot_f0(1) = 0.01
      overshoot_f(1) = 0.345
      overshoot_D0(1) = 1.0

      !step_overshoot_f_above_burn_h_core = 0.345
      !overshoot_f0_above_burn_h_core = 0.01
      !step_overshoot_D0_coeff = 1.0

    ! Wind mass loss
      cool_wind_RGB_scheme = 'de Jager'
      de_Jager_scaling_factor = 1d0
      cool_wind_AGB_scheme = 'Blocker'
      Blocker_scaling_factor = 1d0
      RGB_to_AGB_wind_switch = 1d-4

      hot_wind_scheme = 'Dutch'
      Dutch_scaling_factor = 1d0



    ! T E C H N I C A L   S E T T I N G S

    ! Make it smooth in the HRD
      delta_HR_limit = 0.005d0

      varcontrol_target = 5d-3
      mesh_delta_coeff = 2.5
      redo_limit = -1

      ! do not use smoothing of of previously convective regions, can produce spurious
      ! hydrogen during flashes
      smooth_convective_bdy = .false.

      ! set transition from pseudo-Lagrangian to fully Lagrangian deeper in
      ! this helps convergence
      max_logT_for_k_below_const_q = 100
      max_q_for_k_below_const_q = 0.995
      min_q_for_k_below_const_q = 0.995
      max_logT_for_k_const_mass = 100
      max_q_for_k_const_mass = 0.99
      min_q_for_k_const_mass = 0.99



/ ! end of controls namelist

