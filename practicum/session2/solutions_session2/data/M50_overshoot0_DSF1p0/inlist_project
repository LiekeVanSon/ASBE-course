! For the sake of future readers of this file (yourself included),
! ONLY include the controls you are actually using.  DO NOT include
! all of the other controls that simply have their default values.

&star_job

  ! display on-screen plots
    pgstar_flag = .true.

  ! stop before terminate so that you can see the plots 
    pause_before_terminate = .true.

/ !end of star_job namelist


&controls

  ! Initial mass of the star
    initial_mass = 50.0 ! in Msun units

  ! options for energy conservation (see MESA V, Section 3)
    use_dedt_form_of_energy_eqn = .true.
    use_gold_tolerances = .true.

  ! use C/O enhanced opacities
  ! important for He-burning onwards
    use_Type2_opacities = .true.
    Zbase = 0.02


  !   P H Y S I C A L   C O N T R O L S

  ! Use Ledoux or Schwarzschild criterion (i.e., activate semiconvection)  
    use_ledoux_criterion = .true.
	  alpha_semiconvection = 1.0

  ! Convective overshooting
  !  overshoot_scheme(1) = 'step'
  !  overshoot_zone_type(1) = 'burn_H'
  !  overshoot_zone_loc(1) = 'core'
  !  overshoot_bdy_loc(1) = 'top'
  !  overshoot_f0(1) = 0.005
  !  overshoot_f(1) = 0.25

  ! Wind mass loss
    cool_wind_RGB_scheme = 'Dutch'
    cool_wind_AGB_scheme = 'Dutch'
    RGB_to_AGB_wind_switch = 1d-4

    hot_wind_scheme = 'Dutch'
    Dutch_scaling_factor = 1.0


  !   S T O P P I N G   C O N D I T I O N S

  ! stop when the center mass fraction of he4 drops below this limit
    xa_central_lower_limit_species(1) = 'he4'
    xa_central_lower_limit(1) = 1d-4


  !   T E C H N I C A L   S E T T I N G S

    varcontrol_target = 4d-4

  ! Resolve core H depletion
    delta_lg_XH_cntr_limit = 0.02d0
    delta_lg_XH_cntr_max = 0.0d0
    delta_lg_XH_cntr_min = -6.0d0

  ! Resolve core He depletion
    delta_lg_XHe_cntr_limit = 0.02d0
    delta_lg_XHe_cntr_max = 0.0d0
    delta_lg_XHe_cntr_min = -6.0d0

  ! Resolve when the star goes off the Main sequence
    delta_HR_limit = 0.003d0 ! 0.003d0 worked with 0.001d0


/ ! end of controls namelist
